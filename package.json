{
  "name": "petly",
  "version": "0.0.1",
  "description": "A web app for renting pets",
  "homepage": "https://github.com/ggv3/petly#readme",
  "bugs": {
    "url": "https://github.com/ggv3/petly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggv3/petly.git"
  },
  "license": "MIT",
  "author": "ggv3",
  "workspaces": [
    "database-schema",
    "api-gateway",
    "auth-service",
    "user-service",
    "pet-service",
    "rental-service"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present -- run",
    "test:gateway": "npm run test --workspace=api-gateway",
    "test:auth": "npm run test --workspace=auth-service",
    "test:user": "npm run test --workspace=user-service",
    "test:pet": "npm run test --workspace=pet-service",
    "test:rental": "npm run test --workspace=rental-service",
    "prepare": "husky",
    "lint": "biome lint .",
    "format": "biome format .",
    "ci": "biome ci . && npm run typecheck",
    "dev": "docker-compose --env-file .env.dev up --build",
    "prod": "docker-compose --env-file .env.prod up -d",
    "generate": "cd database-schema && npm run generate",
    "migrate": "cd database-schema && npm run migrate",
    "studio": "cd database-schema && npm run studio",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^25.2.3",
    "husky": "^9.1.7",
    "vitest": "^4.0.18"
  }
}
