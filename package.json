{
  "name": "petly",
  "version": "0.0.1",
  "description": "A web app for renting pets",
  "homepage": "https://github.com/ggv3/petly#readme",
  "bugs": {
    "url": "https://github.com/ggv3/petly/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ggv3/petly.git"
  },
  "license": "MIT",
  "author": "ggv3",
  "workspaces": [
    "database-schema",
    "auth-service"
  ],
  "scripts": {
    "test": "npm run test --workspace=auth-service",
    "test:ci": "npm run test --workspace=auth-service -- run",
    "prepare": "husky",
    "lint": "biome lint .",
    "format": "biome format .",
    "ci": "biome ci .",
    "dev": "docker-compose --env-file .env.dev up --build",
    "prod": "docker-compose --env-file .env.prod up -d",
    "generate": "cd database-schema && npm run generate",
    "migrate": "cd database-schema && npm run migrate",
    "studio": "cd database-schema && npm run studio"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@types/node": "^25.0.0",
    "husky": "^9.1.7",
    "vitest": "^4.0.15"
  }
}
